.listItem {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.listItem-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.addItem {  
      margin-left: 15rpx;  
      width: 15%;  
      line-height: 150%;  
      text-align: center;  
      border: 1px solid #d0d0d0;  
      border-radius: 10rpx;  
}

.box{
    margin-top: 10px;
    clear: both;
    overflow: hidden;
    padding: 0 10px;
}

.del{
    width: 40px;
    float: right;
    margin-left: 10px;
}