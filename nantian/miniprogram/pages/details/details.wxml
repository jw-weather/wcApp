<!--pages/details/details.wxml-->
<view class="acontainer" style='background:url({{img}})  no-repeat center center;background-size: 100% 100%;  min-height:100%;'>
<view class="dcontainer">

<view>
<text class="update_time">更新时间：{{update_time}}</text>
</view>

<view>
<text class="cityName">{{cityName}}</text>
</view>

<view>
<text class="weather">{{weather}}</text>
</view>

<view>
<text class="tem_now">{{tem_now}}</text>
</view>

</view>

<view class="today">
<view class="item">{{today}}</view>
<view class="item">{{weather}}</view>
<view class="item">{{today_tem1}}</view>
<view class="item">{{today_tem2}}</view>
</view>


<view class="divLine"></view>

<scroll-view scroll-x="true" style="white-space: nowrap;">
<view class="period">
<view>
<view style="text-align:center"><text decode="{{true}}">&nbsp;</text>{{period1}}<text decode="{{true}}">&nbsp;</text></view>
<view style="text-align:center">{{wea1}}</view>
<view style="text-align:center">{{tem1}}</view>
</view>
<view>
<view style="text-align:center"><text decode="{{true}}">&nbsp;</text>{{period2}}<text decode="{{true}}">&nbsp;</text></view>
