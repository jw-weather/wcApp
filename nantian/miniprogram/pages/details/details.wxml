</view>

</view>
</scroll-view>

<view class="divLine"></view>



<view class="days">

<view>
<view style="text-align:center">{{oneDay}}</view>
<view style="text-align:center">{{twoDay}}</view>
<view style="text-align:center">{{threeDay}}</view>
<view style="text-align:center">{{fourDay}}</view>
