<!--pages/lists/list.wxml-->
<view class="container">
 <view class="touch-item {{item.isTouchMove ? 'touch-move-active' : ''}}" data-index="{{index}}" bindtouchstart="touchstart" bindtouchmove="touchmove" wx:for="{{dataList}}" wx:key="">
  <view class="content" bindtap='details'>
    <view class='box-left'>
        <text class='space'>\n</text>
        <text class='time'>{{time}}</text>
        <text class='space'>\n</text>
        <text class='city'>\n{{item.city}}</text>
         
     </view>
     <view class='box-right'>
       <text class='space'>\n</text>
        <text class='tem'>\n{{item.today.tem}}</text>
         
     </view>
   
  </view>
  <view class="del" catchtap="deleteCity" data-index="{{index}}">删除</view>
 </view>
</view>


<!--增加按钮-->
<button bindtap="search"> + </button>
